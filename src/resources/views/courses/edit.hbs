<div class='mt-4'>
  <h3>Cập nhật khóa học</h3>
  <form class='mt-4' method='POST' action='/courses/{{course._id}}?_method=PUT'>
    <div class='form-group'>
      <label for='name'>Tên khóa học</label>
      <input
        name='name'
        type='text'
        class='form-control'
        id='name'
        value='{{course.name}}'
      />
    </div>
    <div class='form-group'>
      <label for='description'>Mô tả khóa học</label>
      <textarea
        name='description'
        type='text'
        class='form-control'
        id='description'
      >{{course.description}}</textarea>
    </div>
    <div class='form-group'>
      <label for='videoId'>Video ID</label>
      <input
        name='videoId'
        type='text'
        class='form-control'
        id='videoId'
        value='{{course.videoId}}'
      />
    </div>
    <div class='form-group'>
      <label for='level'>Trình độ</label>
      <input
        name='level'
        type='text'
        class='form-control'
        id='level'
        value='{{course.level}}'
      />
    </div>
    <button type='submit' class='btn btn-primary'>Lưu</button>
  </form>
</div>